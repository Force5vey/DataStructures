<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="TOP_CENTER" spacing="20.0"
    xmlns="http://javafx.com/javafx/8.0.171"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="umgc.BSTController">

    <children>
        <Label fx:id="statusLabel" text="Tree is empty." />
        <Pane fx:id="treePane" prefHeight="300.0" prefWidth="600.0" style="-fx-border-color: black;" />
        <HBox alignment="CENTER" spacing="10.0">
            <children>
                <Label text="Enter a key:" />
                <TextField fx:id="keyField" prefWidth="60.0" />
                <Button text="Insert" onAction="#handleInsert" />
                <Button text="Delete" onAction="#handleDelete" />
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>