<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="TOP_CENTER" spacing="15.0"
    xmlns="http://javafx.com/javafx/8.0.171"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="umgc.HuffmanController">
    <children>
        <Label text="Huffman Code Generator" style="-fx-font-size: 18px;" />
        <HBox spacing="10.0">
            <children>
                <Label text="Enter text:" />
                <TextField fx:id="inputField" prefWidth="300" />
                <Button text="Generate" onAction="#handleGenerate" />
            </children>
        </HBox>
        <TextArea fx:id="outputArea" prefRowCount="12" prefColumnCount="60" editable="false" />
        <Button text="Back" onAction="#handleBack" />
    </children>
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>
</VBox>